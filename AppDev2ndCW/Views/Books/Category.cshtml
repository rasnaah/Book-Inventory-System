@{
    Layout = "_DashboardLayout";
}
@if (ViewBag.issuccess)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>New category added successfully!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
else if (ViewBag.isdeletecat)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Category Deleted!</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container">
    <header class="text-center">
        <h1 class="display-4 font-weight-bold">Add New Book Category</h1>
    </header>
</div>


<div class="container py-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="text-center">
                <div class="row mb-4">
                    <div class="col-md-6 mx-auto">
                        <img src="/img/category.svg" alt="category SVG" class="img-fluid" />
                    </div>
                </div>
            </div>

            <form action="/Books/AddCategory" method="post">
                <!-- Category Input -->
                <div class="form-group mb-4">
                    <div class="datepicker date input-group p-0 shadow-sm">
                        <input type="text" name="catName" placeholder="Please enter the category name" class="form-control py-4 px-4" id="categoryName" required>
                        <div class="input-group-append"><span class="input-group-text px-4"><i class="fa fa-book-open"></i></span></div>
                    </div>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary">Add Category <i class="fas fa-check ml-2"></i></button>
                </div>
            </form>

        </div>
    </div>

    <hr class="my-5" />

    <div my-4>
        <header class="mb-4">
            <p class="h3 text-center">Existing Categories <i class="fas fa-chevron-down ml-2"></i></p>
        </header>
        <div class="row my-4">
            <div class="col-lg-7 mx-auto">
                <div class="card border-0 shadow">
                    <div class="card-body p-5">

                        <!-- Responsive table -->
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th scope="col">SN</th>
                                        <th scope="col">Category Name</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Category</td>
                                            <th>
                                                <a href="@Url.Action("DeleteCategory","Books",new { item.Id} )" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></a>
                                            </th>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>