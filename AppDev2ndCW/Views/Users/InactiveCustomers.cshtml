
@{
    Layout = "_DashboardLayout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="text-center">
                <p class="h3">Inactive Customers <i class="fas fa-users ml-2"></i></p>
                <div class="row my-4">
                    <div class="col-md-8 mx-auto">
                        <img src="/img/inactive_customers.svg" alt="Users SVG" class="img-fluid" />
                    </div>
                </div>
                <p><code>The following customers have not purchased anything since last 31 days.</code></p>
            </div>
        </div>
    </div>

    <div my-4>
        <div class="row py-5">
            <div class="col-lg-11 mx-auto">
                <div class="card rounded shadow border-0">
                    <div class="card-body p-5 bg-white rounded">
                        <div class="table-responsive">
                            <table id="example" style="width:100%" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Address</th>
                                        <th>Contact</th>
                                        <th>Member Type</th>
                                        <th>Last Purchased</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Customer_Name</td>
                                            <td>@item.Customer_Email</td>
                                            <td>@item.Customer_Address</td>
                                            <td>@item.Customer_Contact</td>
                                            <td>@item.Member_Type</td>
                                            <td>@item.Last_Purchased_Date</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
